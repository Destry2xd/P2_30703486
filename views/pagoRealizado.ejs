<div class="container my-5">
  <div class="card shadow-lg">
    <div class="card-header bg-success text-white text-center">
      <h2>✅ Pago Simulado Exitoso</h2>
    </div>
    <div class="card-body">

      <h4 class="mb-4">Detalles del Pago</h4>

      <ul class="list-group mb-4">
        <li class="list-group-item"><strong>Servicio:</strong> <%= servicio.nombre %></li>
        <li class="list-group-item"><strong>Precio:</strong> $<%= servicio.precio %></li>
        <li class="list-group-item"><strong>IP del Cliente:</strong> <%= ip %></li>
        <li class="list-group-item"><strong>Ciudad:</strong> <%= ubicacion.city || 'No disponible' %></li>
        <li class="list-group-item"><strong>Región:</strong> <%= ubicacion.region || 'No disponible' %></li>
        <li class="list-group-item"><strong>País:</strong> <%= ubicacion.country_name || 'No disponible' %></li>
      </ul>

      <div class="text-center">
        <a href="/" class="btn btn-primary">Volver al Inicio</a>
      </div>

    </div>
  </div>
</div>